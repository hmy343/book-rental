<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>book-rental</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>adCheckFilter</filter-name>
		<filter-class>filter.AdCheckFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>adCheckFilter</filter-name>
		<url-pattern>/main.do</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>notAdminFilter</filter-name>
		<filter-class>filter.NotAdminFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>notAdminFilter</filter-name>
		<url-pattern>/admin-user</url-pattern>
	</filter-mapping>
	
	<context-param>
		<param-name>APIConfig</param-name>
		<param-value>/WEB-INF/config.properties</param-value>
	</context-param>
</web-app>